extends ./../../partials/header
block main
  if campaigns.length
    .all-content-inner-wrapper
      each campaign in campaigns
        if campaign.status == "saved"
          .campaign-outer-wrapper
            .campaign-wrapper
              .campaign-photo-wrapper
                img.campaign-photo(src=campaign.photo alt=campaign.name)
              .campaign-info-wrapper
                span.campaign-name= campaign.name
                span.campaign-description= campaign.error ? campaign.error : campaign.description
                .campaign-price-wrapper
                  if campaign.is_free
                    span.campaign-price #{__('Özel Kampanya')}
                  else
                    span.campaign-price-text #{__('Kazanacağın')}:
                    span.campaign-price #{campaign.price}#{currency}
                a.campaign-join-button(href="/test/user?id=" + campaign._id.toString())
                  span.campaign-join-text #{__('Devam Et')}
        else if campaign.status == "waiting"
          .campaign-outer-wrapper
            .campaign-wrapper
              .campaign-photo-wrapper
                img.campaign-photo(src=campaign.photo alt=campaign.name)
              .campaign-info-wrapper
                span.campaign-name= campaign.name
                span.campaign-description= campaign.description
                .campaign-price-wrapper
                  span.campaign-price-text #{__('Kazanacağın')}:
                  span.campaign-price #{campaign.price}#{currency}
                span.campaign-info-text #{__('Onay bekliyor')}...
        else if campaign.status == "approved"
          .campaign-outer-wrapper
            .campaign-wrapper
              .campaign-photo-wrapper
                img.campaign-photo(src=campaign.photo alt=campaign.name)
              .campaign-info-wrapper
                span.campaign-name= campaign.name
                span.campaign-description= campaign.description
                .campaign-price-wrapper
                  span.campaign-price-text #{__('Kazanacağın')}:
                  span.campaign-price #{campaign.price}#{currency}
                span.campaign-info-text #{__('Cevapların onaylandı, bakiyeni profil sayfanda görebilirsin')}!
        else if campaign.status == "unapproved"
          .campaign-outer-wrapper
            .campaign-wrapper
              .campaign-photo-wrapper
                img.campaign-photo(src=campaign.photo alt=campaign.name)
              .campaign-info-wrapper
                span.campaign-name= campaign.name
                span.campaign-error= campaign.error
                .campaign-price-wrapper
                  span.campaign-price-text #{__('Kazanacağın')}:
                  span.campaign-price #{campaign.price}#{currency}
                a.campaign-join-button(href="/test/user?id=" + campaign._id.toString())
                  span.campaign-join-text #{__('Yeniden Doldur')}
    .empty-space
  else
    span.no-campaign-text #{__('Henüz hiçbir kampanyaya katılmamışsın')}.
