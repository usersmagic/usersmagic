extends ./../partials/head
block content
  .header-wrapper
    a.main-logo-wrapper(href=language_key ? `/company?lang=${language_key}` : '/')
      img.main-logo(src="/res/images/logo.png", alt="usersmagic logo")
      span.logo-text usersmagic
    .change-language-wrapper
      .change-language-inner-wrapper
        span.current-language= current_language
        i.fas.fa-globe-americas
      .change-language-menu
        .change-language-menu-inner-wrapper
          a.each-language-button(href="?lang=tr") TR
          a.each-language-button(href="?lang=en") EN
          //- a.each-language-button(href="?lang=es") ES
          //- a.each-language-button(href="?lang=fr") FR
          a.each-language-button(href="?lang=de") DE
    .header-register-button
      span #{__('Hemen Başla')}
    a.header-change-page-button(href=language_key ? `/?lang=${language_key}` : '/')
      span #{__('Para Kazan')}
  .content-wrapper
    .content-inner-wrapper
      .start-page-wrapper
        span.start-page-title
          span #{__('Ürününü hedef kitlene')}
          span.colored #{__(' test ')}
          span #{__('ettirmenin en kolay yolu.')}
        span.start-page-info
          span.purple.bold #{__('usersmagic')}
          span #{__(', bir şirket için en iyisi')}
        .start-page-button
          span #{__('Hemen Başla')}
        .learn-more-link
          span #{__('Daha fazla öğren')}
          i.fas.fa-chevron-down
      .services-wrapper
        span.services-title #{__('Hizmetlerimiz')}
        .each-services-line
          img(src="/res/images/testing.png", alt="testing")
          .each-services-content
            .each-services-title.purple User Testing
            .each-services-info #{__('Ürününüzü hedef kitlenize test ettiriyoruz.')}
        .each-services-line(style="justify-content: center")
          img(src="/res/images/marketing.png", alt="marketing")
          .each-services-content
            .each-services-title.red Experience Marketing
            .each-services-info #{__('Ürününüzü sosyal medya kanalları aracılığıyla tanıtıyoruz. ')}
        .each-services-line(style="justify-content: flex-end")
          img(src="/res/images/analysing.png", alt="analysing")
          .each-services-content
            .each-services-title.green Data Analysing
            .each-services-info #{__('Sonuçları analiz edip size bir yol haritası çiziyoruz.')}
      .tester-info-wrapper
        span.tester-info-first
          span.purple.tester-info-text #{__('14-50 Yaş')}
          span(style="margin-left: 10px") #{__('Aralığında')}
        span.tester-info-second
          span.purple.tester-info-text #{__('2150 Kişilik')}
          span(style="margin-left: 10px") #{__('Tester Ağı')}
      .steps-wrapper
        img(src="/res/images/steps.png", alt="usersmagic in three steps")
        .steps-inner-wrapper
          span.first-step
            span #{__('Hedef kitlenizi belirleyin ve kitleniz ürününüzü')}
            span.purple #{__(' test etmeye ')}
            span #{__('başlasın.')}
          span.second-step
            span #{__('Test edecek kişiler')}
            span.red #{__(' bir hafta boyunca ')}
            span #{__('ürününüzü kullansın, sorularınızı cevaplasın ve ekran kaydı ile deneyimlerini paylaşıp')}
            span.red #{__(' geri bildirim ')}
            span #{__('versin.')}
          span.third-step
            span #{__('Hedef kitleniz deneyimlerini')}
            span.yellow #{__(' sosyal medyada  ')}
            span #{__('paylaşsın ve markanızı kitlenize yaysın.')}
      .steps-wrapper-responsive
        img(src="/res/images/step_one.png", alt="usersmagic")
        span.step-text-responsive
          span #{__('Hedef kitlenizi belirleyin ve kitleniz ürününüzü')}
          span.purple #{__(' test etmeye ')}
          span #{__('başlasın.')}
        img(src="/res/images/step_two.png", alt="usersmagic" style="margin-left: auto")
        span.step-text-responsive(style="margin-left: auto; text-align: right")
          span #{__('Test edecek kişiler')}
          span.red #{__(' bir hafta boyunca ')}
          span #{__('ürününüzü kullansın, sorularınızı cevaplasın ve ekran kaydı ile deneyimlerini paylaşıp')}
          span.red #{__(' geri bildirim ')}
          span #{__('versin.')}
        img(src="/res/images/step_three.png", alt="usersmagic")
        span.step-text-responsive
          span #{__('Hedef kitleniz deneyimlerini')}
          span.yellow #{__(' sosyal medyada  ')}
          span #{__('paylaşsın ve markanızı kitlenize yaysın.')}
      .references-wrapper
        each reference in references
          .each-reference
            .each-reference-inner-wrapper
              span.reference-explanation= reference.explanation
              span.reference-quote
                span "
                each quote in reference.quote
                  span(class=quote.trim().toLowerCase() == "usersmagic" ? "red" : "")= quote
                span "
              span.reference-person ~#{reference.person}
              span.reference-product= reference.product
      .missions-wrapper
        span.first-mission
          span.yellow #{__('Product ')}
          span =
          span.blue #{__(' Growth')}
        span.second-mission
          span.blue #{__('Growth ')}
          span =
          span.green #{__(' Testing')}
        img(src="/res/images/missions.png", alt="usersmagic missions")
      form.form-wrapper(method="POST" action="/")
        span.form-title
          span.red #{__('Büyümeye ')}
          span #{__('hazır mısınız?')}
        .form-input-wrapper
          .form-input-first-column
            input.each-form-input#name-input(type="text" required placeholder=__('İsim Soyisim') name="user_name" autocomplete="nope")
            input.each-form-input#title-input(type="text" required placeholder=__('Ünvan') name="user_title" autocomplete="nope")
            input.each-form-input#business-input(type="text" required placeholder=__('Sektör') name="business_area" autocomplete="nope")
          .form-input-second-column
            input.each-form-input#company-input(type="text" required placeholder=__('Şirket Adı') name="company_name" autocomplete="nope")
            input.each-form-input#phone-input(type="text" required placeholder=__('Telefon Numarası') name="company_phone" autocomplete="nope")
            input.each-form-input#link-input(type="text" required placeholder=__('Ürün Linki') name="company_link" autocomplete="nope")
        button.form-send-button
          span #{__('Aramıza Katıl')}
        .form-response-wrapper
          span.form-response#success-text #{__('Başvurunuz başarı ile alındı, ekibimiz birkaç gün içinde sizinle iletişime geçecektir. Aramıza katıldığınız için teşekkür ederiz.')}
          span.form-response.red#bad-request-error #{__('Lütfen formdaki bütün alanları doldurun.')}
          span.form-response.red#database-error #{__('Kaydınız alınırken bir hata oluştu, lütfen bilgilerinizi kontrol edin ve tekrar deneyin.')}
          span.form-response.red#unknown-error #{__('Bilinmeyen bir hata oluştu, lütfen daha sonra tekrar deneyin.')}
      .footer
        .footer-top
          .each-footer-column(style="margin-right: 20px")
            span.footer-title #{__('İletişim')}
            span.footer-text hello@usersmagic.com
            span.footer-text instagram - usersmagic
            span.footer-text linkedin - usersmagic
          .each-footer-column.services-footer(style="margin-left: 20px")
            span.footer-title #{__('Hizmetlerimiz')}
            span.footer-text User Testing
            span.footer-text Experience Marketing
            span.footer-text Data Analysing
        .footer-bottom
          span.copyright Copyright 2020 - Loy Yazılım
          span.copyright #{__('Tüm hakları saklıdır.')}
