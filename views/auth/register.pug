extends ../partials/head
block content
  script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js')
  .brand-wrapper
    //- a.brand-text(href="/brand") #{__('Marka Sayfası')}
    a.main-page-button(href=language_key ? "/?lang=" + language_key : "/")
      img(src="/res/images/usersmagic_logo1.png" alt="usersmagic tester" class="usersmagic_logo")
      //-i.fas.fa-home
    .language-change-wrapper
      a.language-text(href="/auth/register?lang=tr") TR
      span |
      a.language-text(href="/auth/register?lang=en") EN
  form.all-wrapper.register-form(method="POST" action="/auth/register" + (invitor ? "?code=" + invitor : "") + (language_key ? ((invitor ? "&" : "?") + "lang=" + language_key) : ""))
    .all-inner-wrapper
      span.form-title #{__('Welcome!')}
      br
      span.form-subtitle #{__('Create your free account')}
      span.general-input-title #{__('Email')}
      input.general-input-with-border(type="email" placeholder=__('name@email.com') name="email" required autofocus autocomplete="off")
      span.general-input-title #{__('Password')}
      input.general-input-with-border(type="password" placeholder=__('******') name="password" required autocomplete="off")
      span.general-input-title #{__('Password Confirmation')}
      input.general-input-with-border(type="password" placeholder=__('******') name="password_confirm" required autocomplete="off")
      if error
        span.error-text=error
      span(class='error-text' id='email-error') #{__('Invalid E-mail address')}
      span(class='error-text' id='password-length-error') #{__('The password should have at least 6 characters')}
      span(class='error-text' id='password-confirmation-error') #{__('Password missmatch!')}
      button.general-seablue-button
        span #{__('Üye Ol')}
      .agreement-wrapper-register
        span.agreement-text #{__('By signing up, I agree to')}
          a.agreement-link(href="/agreement/user")  #{__('Kullanım Sözleşmesini')}
          span.agreement-text  #{__('ve')}
          a.agreement-link(href="/agreement/privacy")  #{__('Gizlilik Sözleşmesini')}
        //-span.agreement-text  #{__('kabul ediyor, kişisel verilerin korunması ve işlenmesine ilişkin açık rıza veriyorum.')}
      br
      .register-link-wrapper
        span.register-text #{__('Zaten üye misin')}?
        a.register-link(href=language_key ? "/auth/login?lang=" + language_key : "/auth/login") #{__('Giriş Yap')}
    .bottom-wrapper
      span.copyright-text Copyright 2020 - Loy Yazılım
