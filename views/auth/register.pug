extends ./../partials/head
block content
  form.all-wrapper(method="POST" action="/auth/register")
    span.logo-name usersmagic
    input.each-input(type="email" placeholder="E-Posta" name="email" required autofocus autocomplete="off")
    input.each-input(type="password" placeholder="Şifre" name="password" required autocomplete="off")
    input.each-input(type="password" placeholder="Şifre Tekrarı" name="password_confirm" required autocomplete="off")
    //- input.each-input(type="text" placeholder="Ad Soyad" name="name" required autocomplete="off")
    //- input.each-input(type="phone" placeholder="Telefon Numarası" name="phone" required autocomplete="off")
    //- input.each-input(type="text" placeholder="Cinsiyet" name="gender" required autocomplete="off")
    //- input.each-input(type="number" placeholder="Doğum Yılı" name="birth_year" required autocomplete="off")
    if error
      span.error-text= error
    button.send-button
      span Üye Ol
    .register-link-wrapper
      span.register-text Zaten üye misin?
      a.register-link(href="/auth/login") Giriş Yap
    .bottom-wrapper
      a.brand-wrapper(href="/brand")
        img.brand-logo(src="/res/images/logo_black.png", alt="")
        span.brand-text #{__('Marka Sayfası')}
      span.copyright-text Copyright 2020 - Loy Yazılım
