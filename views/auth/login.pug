extends ./../partials/head
block content
  form.all-wrapper(method="POST" action="/auth/login")
    span.logo-name usersmagic
    input.each-input(type="email" placeholder="E-Posta" name="email" required autofocus autocomplete="off")
    input.each-input(type="password" placeholder="Şifre" name="password" required autocomplete="off")
    button.send-button
      span Giriş Yap
    .register-link-wrapper
      span.register-text Üye değil misin?
      a.register-link(href="/auth/register") Üye Ol
    .bottom-wrapper
      a.brand-wrapper(href="/brand")
        img.brand-logo(src="/res/images/logo_black.png", alt="")
        span.brand-text #{__('Marka Sayfası')}
      span.copyright-text Copyright 2020 - Loy Yazılım
