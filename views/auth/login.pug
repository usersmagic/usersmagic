extends ./../partials/head
block content
  form.all-wrapper(method="POST" action="/auth/login")
    .all-inner-wrapper
      span.logo-name usersmagic
      input.each-input(type="email" placeholder=__('E-Posta') name="email" required autofocus autocomplete="off")
      input.each-input(type="password" placeholder=__('Şifre') name="password" required autocomplete="off")
      button.send-button
        span #{__('Giriş Yap')}
      .register-link-wrapper
        span.register-text #{__('Üye değil misin?')}
        a.register-link(href="/auth/register") #{__('Üye Ol')}
    .bottom-wrapper
      a.brand-wrapper(href="/brand")
        img.brand-logo(src="/res/images/logo_black.png", alt="")
        span.brand-text #{__('Marka Sayfası')}
      span.copyright-text Copyright 2020 - Loy Yazılım
