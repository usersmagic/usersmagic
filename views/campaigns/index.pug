extends ./../partials/head
block content
  .all-wrapper
    .invite-button
      i.fas.fa-lira-sign.lira-sign
      span.invite-text #{__('Tanıdıklarını davet et, para kazan!')}
    .invite-wrapper
      span.invite-title
        span #{__('Arkadaşlarını aşağıdaki')}
        span.invite-title-bold #{__('sana özel')}
        span #{__('linki kullanarak davet et, uygulamadan para çeken')}
        span.invite-title-bold #{__('her arkadaşın')}
        span #{__('için')}
        span.invite-title-bold 2#{currency}
        span #{__('kazan')}!
      span.invite-message https://usersmagic.com/auth/register?code=#{code}
      .invite-copy-button
        span.invite-copy-button-text #{__('Linki Kopyala')}
      span.invite-close-text #{__('Kapat')}
    .all-header
      .all-header-menu-wrapper
        a.each-header-menu(href="/history")
          i.fas.fa-tasks
        a.each-header-menu.selected(href="/campaigns")
          i.fas.fa-home
        a.each-header-menu(href="/profile")
          i.fas.fa-user
    .all-content
      if campaigns.length
        .all-content-inner-wrapper
          each campaign in campaigns
            .campaign-outer-wrapper
              .campaign-wrapper
                .campaign-photo-wrapper
                  img.campaign-photo(src=campaign.photo alt=campaign.name)
                .campaign-info-wrapper
                  span.campaign-name= campaign.name
                  span.campaign-description= campaign.description
                  .campaign-price-wrapper
                    span.campaign-price-text #{__('Kazanacağın')}:
                    span.campaign-price #{campaign.price}#{currency}
                  a.campaign-join-button(href="/campaigns/join?id=" + campaign._id.toString())
                    span.campaign-join-text #{__('Katıl')}
        .empty-space
      else
        span.no-campaign-text #{__('Şuan katılabileceğin hiçbir kampanya görünmüyor, lütfen daha sonra tekrar kontrol et!')}
