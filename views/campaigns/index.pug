extends ../partials/header
block main
  script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js')
  span.user_logo_wrapper
  div.status_buttons
    button.status_button(id="new") #{__('New')}
    button.status_button(id="complete") #{__('Complete')}
    button.status_button(id="in_review") #{__('In Review')}
  if campaigns.length
    .all-content-inner-wrapper 
      h4.test_title #{__('New tests are here!')}
      input.display-none#campaign-details(value=campaigns)
      input.display-none#currency(value=currency)
      span.total-price-of-tests You can earn __ when you complete the following
      each campaign, i in campaigns
        .campaign-outer-wrapper
         .campaign-wrapper
           .campaign-photo-wrapper
             img.campaign-photo(src=campaign.image alt=campaign.name)
           .campaign-info-wrapper
             span.campaign-name= campaign.name
             if campaign.is_private_campaign
               span.campaign-time-limit #{__('Zaman Sınırı')}: #{campaign.time_limit}s
             span.campaign-description= campaign.description
             .campaign-price-wrapper
               if campaign.is_free || !campaign.price
                 span.campaign-price #{__('Özel Kampanya')}
               else
                 span.campaign-price-text #{__('Kazanacağın')}:
                 span.campaign-price #{campaign.price}#{currency}
             a.campaign-join-button(href="/campaigns/join?id=" + campaign._id.toString() + (campaign.is_private_campaign ? "&is_private_campaign=true" : ""))
               span.campaign-join-text #{__('Katıl')}
    .empty-space
  else
    span.no-campaign-text #{__('Şuan katılabileceğin hiçbir kampanya görünmüyor, lütfen daha sonra tekrar kontrol et!')}
  script(src="/js/dynamic_headers/dynamic_orginizer.js")
